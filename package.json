{
  "name": "Water",
  "version": "1.0.0",
  "description": "A CSS framework made of reusable tools and components",
  "author": "Chris Roper",
  "license": "MIT",
  "scripts": {
    "build": "yarn lint && yarn build:sass",
    "build:sass": "node-sass -o css/ css/styles.scss --output-style expanded",
    "lint": "yarn lint:stylelint",
    "lint:stylelint": "stylelint 'css/**/*.scss'; exit 0"
  },
  "dependencies": {
    "node-sass": "^4.7.2",
    "prettier": "^1.11.1",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^9.1.3",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^2.5.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.2"
  }
}
